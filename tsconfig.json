{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "removeComments": true,
      "noLib": false,
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "useUnknownInCatchVariables": false,
      "target": "ES2021",
      "sourceMap": true,
      "allowJs": false,
      "outDir": "dist",
      "baseUrl": "."
    },
    // "include": ["packages/**/*", "integration/**/*", "examples/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }